<script>
     $(document).ready(function() {
        //Prevents empty task entries
        $('form').submit(function(event) {
            const taskInput = $('input[name="task"]');
            const errorMessage = $(".error-message");

            if(taskInput.val().trim() === '') {
                errorMessage.show(); //Show error message
                taskInput.focus(); //Focuses on the input field
                event.preventDefault(); //Prevents form from submitting
            } else {
                errorMessage.hide(); //Hides error message if input not empty
            }
        });
        //Adds and removes strike throught text when task is completed
        $('.listBody input[type="checkbox"]').change(function() {
            const li = $(this).parent();
            if (this.checked) {
                li.addClass('completed');
            } else {
                li.removeClass('completed');
            }
        });
    });
</script>
